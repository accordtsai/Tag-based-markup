<div class="page-header">
  <%= link_to new_patient_list_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Patient list
  <% end %>
  <h1>Listing patient_lists</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Content</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @patient_lists) do |patient_list| %>
        <td><%= patient_list.name %></td>
        <td><%= patient_list.content %></td>
        <td><%= link_to 'Show', patient_list %></td>
        <td><%= link_to 'Edit', edit_patient_list_path(patient_list) %></td>
        <td><%= link_to 'Destroy', patient_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
