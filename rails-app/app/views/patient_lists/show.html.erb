<div class="page-header">
  <%= link_to patient_lists_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_patient_list_path(@patient_list), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show patient_list</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @patient_list.name %></dd>

  <dt>Content:</dt>
  <dd><%= @patient_list.content %></dd>

</dl>
<h3>Patients</h3>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Personal data</th>
      <th>First name</th>
      <th>Last name</th>
    </tr>
  </thead>
  <tbody>
    <%= content_tag_for(:tr, @patients) do |patient| %>
      <td><%= link_to patient.name, patient_list_patient_path(@patient_list, patient) %></td>
      <td><%= patient.personal_data %></td>
      <td><%= patient.first_name %></td>
      <td><%= patient.last_name %></td>
    <% end %>
  </tbody>
</table>
