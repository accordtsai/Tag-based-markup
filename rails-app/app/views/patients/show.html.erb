<div class="page-header">
  <%= link_to new_patient_list_patient_encounter_path(@patient_list, @patient), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Encounter
  <% end %>
  <%= link_to patient_list_path(@patient_list), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>Show patient</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @patient.name %></dd>

  <dt>Personal data:</dt>
  <dd><%= @patient.personal_data %></dd>

  <dt>First name:</dt>
  <dd><%= @patient.first_name %></dd>

  <dt>Last name:</dt>
  <dd><%= @patient.last_name %></dd>

</dl>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Date</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @encounters) do |encounter| %>
        <td><%= encounter.id %></td>
        <td><%= encounter.title %></td>
        <td><%= encounter.signed_date.to_date %></td>
        <td><%= link_to 'Show', patient_list_patient_encounter_path(@patient_list, @patient, encounter) %></td>
        <td><%= link_to 'Destroy', patient_list_patient_encounter_path(@patient_list, @patient, encounter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @encounters %>